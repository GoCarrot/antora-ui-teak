{{#if page.navigation}}
  <div class="nav-panel-menu is-active" data-panel="menu">
    {{#each (componentSorter site.components page.attributes.component-sort-order)}}
      <nav class="nav-menu {{#if (eq @root.page.component.name ./latest.name)}}is-current-component{{/if}}">
        <h3 class="title"><a class="{{#if (eq @root.page.url ./latest.url)}}is-current-root{{/if}}" href="{{{relativize ./url}}}">{{{./latest.title}}}</a></h3>
        {{> nav-tree navigation=./latest.navigation }}
      </nav>
    {{/each}}
  </div>
{{/if}}
