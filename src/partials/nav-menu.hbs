{{#if page.navigation}}
  <div class="nav-panel-menu is-active" data-panel="menu">
    <nav class="nav-menu">
      {{#unless (eq @root.page.component.name page.attributes.base-nav-key)}}
        <ul class="nav-list">
          <li class="nav-item">
            <a class="nav-link nav-back" href="/">Docs Home</a>
          </li>
        </ul>
        {{#with @root.page.componentVersion}}
          <h3 class="title"><a href="{{{relativize ./url}}}">{{./title}}</a></h3>
        {{/with}}
      {{/unless}}
      {{#with page.navigation}}
        {{> nav-tree navigation=this}}
      {{/with}}
    </nav>
  </div>
{{/if}}
